{
  "name": "@listr2/docs",
  "version": "1.0.0",
  "private": true,
  "description": "Documentation for listr2.",
  "license": "MIT",
  "repository": "https://github.com/listr2/listr2",
  "type": "module",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://cenk.kilic.dev"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "docs:typedoc": "typedoc",
    "docs:build": "pnpm run docs:typedoc && vitepress build",
    "dev:start": "pnpm run docs:typedoc && vitepress dev --host 0.0.0.0",
    "format": "prettier --log-level warn --write ./ && pnpm run lint --fix",
    "lint": "eslint --flag v10_config_lookup_from_file"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,spec.ts}": [
      "prettier --log-level warn --write",
      "eslint --flag v10_config_lookup_from_file --fix"
    ],
    "*.{json,md}": [
      "prettier --log-level warn --write"
    ]
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.2.0",
    "@fortawesome/free-brands-svg-icons": "^7.2.0",
    "@fortawesome/free-regular-svg-icons": "^7.2.0",
    "@fortawesome/free-solid-svg-icons": "^7.2.0",
    "@fortawesome/vue-fontawesome": "^3.1.3",
    "@vue/eslint-config-typescript": "^14.6.0",
    "eslint-plugin-vue": "^10.7.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "typedoc": "^0.28.17",
    "typedoc-plugin-markdown": "4.10.0",
    "typedoc-vitepress-theme": "1.1.2",
    "vitepress": "1.6.4",
    "vitepress-sidebar": "^1.33.1",
    "vue": "^3.5.28"
  }
}
