{
  "name": "@listr2/root",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepository for listr2.",
  "license": "MIT",
  "repository": "https://github.com/listr2/listr2",
  "type": "module",
  "author": {
    "name": "Cenk Kilic",
    "email": "cenk@kilic.dev",
    "url": "https://cenk.kilic.dev"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "workspaces": [
    "packages/*",
    "examples",
    "docs"
  ],
  "scripts": {
    "clean": "rimraf node_modules pnpm-lock.yaml packages/*/node_modules examples/node_modules docs/node_modules",
    "dev:start": "pnpm run --parallel -r dev:start",
    "build": "pnpm run -r build",
    "docs:build": "pnpm run --filter @listr2/docs docs:build",
    "format": "pnpm run --parallel -r format",
    "lint": "pnpm run --parallel -r lint",
    "test": "pnpm run --parallel -r test",
    "test:cov": "pnpm run --parallel -r test:cov"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true",
    "pre-push": "pnpm run test"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx,spec.ts}": [
      "prettier --log-level warn --write",
      "eslint --flag v10_config_lookup_from_file --fix"
    ],
    "*.{json,md}": [
      "prettier --log-level warn --write"
    ]
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^2.2.3",
    "@cenk1cenk2/eslint-config": "^3.1.75",
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.15.13",
    "@tsconfig/node22": "^22.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "eslint": "^10.0.1",
    "execa": "^9.6.1",
    "jest": "^30.2.0",
    "jest-mock-process": "^2.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "simple-git-hooks": "^2.13.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsdown": "0.20.3",
    "typescript": "^5.9.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
