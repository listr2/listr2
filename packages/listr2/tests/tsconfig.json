{
  "extends": "../tsconfig",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../",
    "baseUrl": "../",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "paths": {
      "@constants": ["./src/constants/index"],
      "@interfaces": ["./src/interfaces/index"],
      "@lib": ["./src/lib/index"],
      "@presets": ["./src/presets/index"],
      "@renderer": ["./src/renderer/index"],
      "@utils": ["./src/utils/index"],
      "@tests/utils": ["./tests/utils/index"],
      "@root": ["./src/index"]
    }
  },
  "include": ["../src", "../tests"],
  "exclude": ["node_modules", "dist"]
}
